#:kivy 2.0


WindowMain: 
    Lobby:
    Grammar:
    Navegation:
    
<Lobby>:
    orientation: 'vertical'
    name: "Lobby"
    MDLabel :
        text: root.Screen
        halign: 'center'
        pos_hint: {'center_x': 0.5,'center_y':0.9}
        font_size: 120

    MDRectangleFlatButton:
        text: 'Grammar'
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.15,'center_y':0.2}
        on_press:
            app.root.current = "Grammar"
            root.manager.transition.direction = "left"

    MDRectangleFlatButton:
        text: 'Vocabulary'
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.50,'center_y':0.2}
        on_press:
            root.changeScreen('Vocabulary')
            app.root.current = "Vocabulary"
            root.manager.transition.direction = "left"

    MDRectangleFlatButton:
        text: 'Expressions'
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.85,'center_y':0.2}
        on_press:
            root.changeScreen('Expressions')
            app.root.current = "Expressions"
            root.manager.transition.direction = "left"

<Grammar>:
    orientation: 'vertical'
    name: "Grammar"
    MDLabel :
        text: root.Screen
        halign: 'center'
        pos_hint: {'center_x': 0.5,'center_y':0.9}
        font_size: 40

    MDRectangleFlatButton:
        text: 'Menu'
        size_hint: (0.2, 0.05)
        pos_hint: {'center_x': 0.15,'center_y':0.1}
        on_press:
            app.root.current = "Lobby"
            root.manager.transition.direction = "right"

    
    MDLabel :
        text: root.title
        halign: 'center'
        pos_hint: {'center_x': 0.5,'center_y':0.8}
        font_size: 40

    MDLabel :
        text: root.text
        halign: 'center'
        pos_hint: {'center_x': 0.5,'center_y':0.7}
        font_size: 80

    MDLabel :
        text: root.text_hiden
        halign: 'center'
        pos_hint: {'center_x': 0.5,'center_y':0.6}
        font_size: 80


<Navegation>:

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x': 0.10,'center_y':0.2}
        on_press:
            root.back()

    MDRectangleFlatButton:
        text: 'Next'
        pos_hint: {'center_x': 0.30,'center_y':0.2}
        on_press:
            root.next()

    MDRectangleFlatButton:
        text: 'Show'
        pos_hint: {'center_x': 0.5,'center_y':0.5}
        on_press:
            root.show()
            
    MDRectangleFlatButton:
        text: 'Play'
        pos_hint: {'center_x': 0.75,'center_y':0.5}
        on_press:
            root.readIt()

    MDRectangleFlatButton:
        text: 'Reset'
        pos_hint: {'center_x': 0.5,'center_y':0.1}
        on_press:
            root.reset()

    MDRectangleFlatButton:
        text: root.title_randomVerbs
        pos_hint: {'center_x': 0.75,'center_y':0.4}
        on_press:
            root.randomVerbs()

    MDRectangleFlatButton:
        text: 'Generate'
        pos_hint: {'center_x': 0.75,'center_y':0.2}
        on_press:
            root.randomNext()